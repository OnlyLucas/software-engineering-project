<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:background="@color/navBar">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/background">

            <TextView
                android:id="@+id/numberCleaningPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/nameCleaningPlan"
                android:layout_marginStart="10sp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/nameCleaningPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descriptionCleaningPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameCleaningPlan"
                android:layout_toLeftOf="@id/nextCleaningDate"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="15sp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/nextCleaningDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/nameCleaningPlan"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginRight="15sp"
                android:layout_toLeftOf="@id/removeCleaningPlan"/>

            <ImageView
                android:id="@+id/removeCleaningPlan"
                android:layout_width="22sp"
                android:layout_height="22sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18sp"
                android:src="@drawable/remove"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>