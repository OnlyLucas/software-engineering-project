<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.CleaningPlanController">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#F1FEFF"
        android:id="@+id/header">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="Cleaning Plan"/>

        </androidx.appcompat.widget.LinearLayoutCompat>



    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list"
        android:background="@color/white"
        android:layout_below="@+id/header"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="28dp"
        android:layout_marginBottom="-20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:background="#F1FEFF"
            android:id="@+id/footerCleaningPlan">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/my_accent"
                android:gravity="center_horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/goBackButtonCleaningPlan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/go_back"
                        android:drawableLeft="@drawable/go_back_icon_small"
                        android:layout_weight="1"
                        android:backgroundTint="@color/my_primary"/>

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>

                    <Button
                        android:id="@+id/editCleaningPlan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/edit"
                        android:drawableLeft="@drawable/go_back_icon_small"
                        android:layout_weight="1"
                        android:backgroundTint="@color/my_primary"/>

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>

            </LinearLayout>

        </RelativeLayout>





    </androidx.cardview.widget.CardView>

</RelativeLayout>

