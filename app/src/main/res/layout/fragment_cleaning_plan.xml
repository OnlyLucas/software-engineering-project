<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_cleaning_plan"
    tools:context=".controller.CleaningPlanFragment">

    <ListView
        android:id="@+id/cleaningPlanList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/fragment_cleaning_plan_header"/>

    <LinearLayout
        android:id="@+id/fragment_cleaning_plan_header"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:background="@color/my_accent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/goBackButtonCleaningPlan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/my_primary"
                android:drawableLeft="@drawable/go_back_icon_small"
                android:text="Test Fragment" />

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/editCleaningPlan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/my_primary"
                android:drawableLeft="@drawable/go_back_icon_small"
                android:onClick="testMethode"
                android:text="@string/edit" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

    </LinearLayout>

</RelativeLayout>