<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.appsettings.FragmentManageFlatShareController">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-20dp"
        app:cardBackgroundColor="@color/background2"
        app:cardCornerRadius="28dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:id="@+id/headerManageFlatShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:alpha="0.7"
                    android:text="@string/manage_flat_share"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/addFlatShare"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="7sp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/add_symbol_blue"
                    app:tint="@color/primary" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/header1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background2"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/nameManageFlatShare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/descriptionManageFlatShare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/header2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background2"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp">

                <EditText
                    android:id="@+id/inputMailManageFlatShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ems="10"
                    android:hint="@string/enter_mail_here" />

                <ImageView
                    android:id="@+id/addFlatShareMember"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7sp"
                    android:layout_toRightOf="@+id/inputMailManageFlatShare"
                    android:src="@drawable/add_symbol_gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="300dp">

                <ListView
                    android:id="@+id/flatShareMemberList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/background2"
                    android:divider="@null" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancelManageFlatShare"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/secondary"
                    android:drawableLeft="@drawable/go_back_icon_small"
                    android:text="@string/cancel"
                    tools:ignore="RtlHardcoded" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <Button
                    android:id="@+id/saveManageFlatShare"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/primary"
                    android:drawableLeft="@drawable/save_icon"
                    android:text="@string/save"
                    tools:ignore="RtlHardcoded" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>