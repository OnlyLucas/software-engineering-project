<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".controller.FragmentCleaningPlanAddController">

    <EditText
        android:id="@+id/enterNameAddCleaningPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        android:hint="Name"
        android:visibility="visible" />

    <EditText
        android:id="@+id/enterDescriptionCleaningPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enterNameAddCleaningPlan"
        android:layout_marginBottom="10dp"
        android:hint="Enter Description here"
        android:inputType="textMultiLine"
        android:maxLines="10" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/datePickerCleaningPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/enterDescriptionCleaningPlan"
        android:layout_marginBottom="10dp"
        android:text="Select Date Range"
        app:icon="@drawable/calender_icon" />

    <Spinner
        android:id="@+id/chooseInterval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/datePickerCleaningPlan"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />


</RelativeLayout>